{
    "name": "logseq-plugin-left-sidebar-enhance",
    "description": "Includes some features such as mouse over to show left sidebar.",
    "repository": "https://github.com/YU000jp/logseq-plugin-left-sidebar-enhance.git",
    "author": "YU000jp",
    "license": "MIT",
    "logseq": {
        "id": "left-sidebar-enhance",
        "title": "Left-Sidebar Enhance",
        "icon": "./icon.png",
        "main": "./dist/index.html"
    },
    "effect": true,
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build --mode=dev",
        "prod": "vite build"
    },
    "dependencies": {
        "@logseq/libs": "^0.0.17",
        "date-fns": "^3.1.0",
        "logseq-l10n": "^0.2.0"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^20.10.6",
        "conventional-changelog-conventionalcommits": "^7.0.2",
        "cz-conventional-changelog": "^3.3.0",
        "jest": "^29.7.0",
        "npx": "^10.2.2",
        "rollup-plugin-string": "^3.0.0",
        "semantic-release": "^22.0.12",
        "typescript": "^5.3.3",
        "vite": "^5.0.11",
        "vite-plugin-logseq": "^1.1.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}